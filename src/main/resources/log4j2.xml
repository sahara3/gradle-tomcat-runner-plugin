<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="off">
  <Properties>
    <Property name="pattern">%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level - %c - %msg%n</Property>
  </Properties>

  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="${pattern}"/>
    </Console>
  </Appenders>

  <Loggers>
    <Root level="info">
      <AppenderRef ref="STDOUT"/>
    </Root>
    <Logger name="com.github.sahara3" level="trace"/>
  </Loggers>
</Configuration>
